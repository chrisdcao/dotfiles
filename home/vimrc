"-------------SPACES & TABS-------------"
set backspace=indent,eol,start
set tabstop=4
set listchars=tab:\ \ 
set list
set softtabstop=4
set expandtab
set autoindent
set shiftwidth=4

"-------------UI CONFIG-------------"
