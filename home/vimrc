set number
set relativenumber 
set ignorecase
set hlsearch
set cursorline
"set lazyredraw
set re=1
set shellslash
set showcmd
set wildignorecase
set wildmenu
set wildmode=full
inoremap jk <Esc>
vnoremap jk <Esc>  
inoremap <Esc> <nop>
vnoremap <Esc> <nop>
"nnoremap <up> <nop>
"nnoremap <down> <nop>
"nnoremap <left> <nop>
"nnoremap <right> <nop>
"inoremap <up> <nop>
"inoremap <down> <nop>
