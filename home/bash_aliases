# TERMINAL
alias "showpath"="readlink -f"
alias "symlink"="ln -s"

# VIM
alias "vimt"="vim -c 'NERDTree'"

# TMUX

# GITHUB
alias "commat"="git add -A; git commit"
alias "push"="git push"

# Compiling
# GDB
alias "g++db"="g++ -g3 -Wall -Wextra"
alias "gdbc"="gcc -g3 -W -Wall -Wextra"
alias "gdbui"="gdb -tui"
alias "export-ompcc"="export PATH=/usr/share/bin:$PATH"

# Python
alias "pythonc"="python3 -m py_compile"

#tmux
alias "tmux"="TERM=screen-256color-bce tmux"

#mpi compile
alias "mpic"="mpicc -I/usr/lib/x86_64-linux-gnu/openmpi/include"
