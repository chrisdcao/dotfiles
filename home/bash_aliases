# TERMINAL
alias "showpath"="readlink -f"
alias "symlink"="ln -s"
alias "off"="shutdown -h now"
alias "schema"="vim /usr/share/glib-2.0/schemas/org.gnome.Terminal.gschema.xml"

# VIM
alias "vimt"="vim -c 'NERDTree'"

# TMUX

# GITHUB
alias "commat"="git add -A; git commit"
alias "push"="git push"

# Compiling
# GDB
alias "g++db"="g++ -g3 -Wall -Wextra"
alias "gdbc"="gcc -g3 -W -Wall -Wextra"
alias "gdbui"="gdb -tui"
alias "export-ompcc"="export PATH=/usr/share/bin:$PATH"

# Python
alias "py3c"="python3 -m py_compile"
alias "py3"="python3"
alias "venv"="virtualenv"
alias "deact"="deactivate"

# mpi compile
alias "mpic"="mpicc -I/usr/lib/x86_64-linux-gnu/openmpi/include"

# Java
alias "javacstd"="javac -classpath .:stdlib.jar"
alias "javastd"="java -classpath .:stdlib.jar"
alias "java-algs4"="java -classpath .:algs4.jar"
